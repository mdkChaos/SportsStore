@model Order

<h2>Оплатить сейчас</h2>
<p>Пожалуйста, введите ваши данные, и мы отправим ваш товар прямо сейчас!</p>

<form asp-action="Checkout" method="post">
    <h3>Получатель</h3>
    <div class="form-group">
        <label>Имя:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <h3>Адрес</h3>
    <div class="form-group">
        <label>Линия 1:</label>
        <input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Линия 2:</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Линия 3:</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Область:</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Почтовый код:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <h3>Опции</h3>
    <div class="custom-checkbox">
        <label>
            <input asp-for="GiftWrap" /> Подарочная упаковка
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Завершить покупку" />
    </div>
</form>